<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.googlemapsapiassignment.HelloController" stylesheets="@style.css">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20" />
  </padding>
  <Label text="Distance Calculator" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

  <!-- Flex container for input fields -->
  <VBox style="-fx-display: flex; -fx-alignment: center; -fx-spacing: 10px;">
    <TextField fx:id="pointAField" promptText="Enter Point A (e.g., Toronto)" />
    <TextField fx:id="pointBField" promptText="Enter Point B (e.g., New York)" />
  </VBox>

  <Button text="Calculate Distance" onAction="#calculateDistance" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;" />

  <Label fx:id="resultTitle" text="Results:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-margin-top: 15px;" />
  <TextArea fx:id="resultTextArea" editable="false" style="-fx-padding: 15px; -fx-background-color: #FAFAFA; -fx-border-color: #BDC3C7; -fx-border-radius: 5px; -fx-pref-height: 200px; -fx-pref-width: 400px; -fx-font-size: 14px; -fx-line-spacing: 1.5; -fx-wrap-text: true;" />
</VBox>
